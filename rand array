#include <iostream>
#include <random>
using namespace std;

const int max1 = 10;

int main(){
   int largest = 0;
   int location = 0;
   int num[max1];
   
   
   for(int i = 0; i < max1; i++) {      // make random array
      num[i] = (rand()%1000)+1;
    location = i;
    cout << num[i] <<  endl;
   }
    


    largest = num[0];   // give largest value
   for(int i = 1;i < max1; i++) {
    if(largest < num[i])
        largest = num[i];
   } 

   cout<<"Largest value: "<< largest << " at subscript: " << location;
   return 0;
}
